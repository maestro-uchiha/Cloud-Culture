# .replit  (repo root)

# --- Response headers (Static Deployments) ---

# Cache-bust resistant, long-lived static assets
[[deployment.responseHeaders]]
path = "/assets/*"
name = "Cache-Control"
value = "public, max-age=31536000, immutable"

# Sensible defaults for all pages
[[deployment.responseHeaders]]
path = "/*"
name = "X-Content-Type-Options"
value = "nosniff"

[[deployment.responseHeaders]]
path = "/*"
name = "Referrer-Policy"
value = "strict-origin-when-cross-origin"

# --- Optional rewrites (keep commented unless you need SPA behavior) ---
# [[deployment.rewrites]]
# from = "/*"
# to   = "/index.html"

# Note: Custom 404 works automatically when parametric-static/404.html exists.
